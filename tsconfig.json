{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "importHelpers": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "paths": {
      "assets": ["./src/assets"],
      "config": ["./src/config"],
      "components/*": ["./src/components/*"],
      "core": ["./src/core"],
      "modules/*": ["./src/modules/*"],
      "styles": ["./src/styles"],
      "themes": ["./src/themes"],
      "types": ["./src/types"],
      "utils/*": ["./src/utils/*"]
    },
    "rootDirs": [
      "src"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "types": [
      "react",
      "react-native",
      "react-redux",
      "promise"
    ]
  },
  "include": [
    "src/**/*",
    "./*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": false
}
